{
  "name": "bookauthor-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for the BookAuthor application using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "install:browsers": "playwright install chromium",
    "serve": "http-server . -p 3000 -c-1 --silent",
    "test:local": "concurrently \"npm run serve\" \"wait-on http://localhost:3000 && playwright test\" --kill-others --success first"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "bookauthor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "wait-on": "^7.2.0"
  }
}
